<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="me.igrr.scribevault.ui.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_captureFragment"
            app:destination="@id/captureFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="me.igrr.scribevault.ui.onboarding.OnboardingFragment"
        android:label="OnboardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboardingFragment_to_captureFragment"
            app:destination="@id/captureFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/captureFragment"
        android:name="me.igrr.scribevault.ui.capture.CaptureFragment"
        android:label="fragment_capture"
        tools:layout="@layout/fragment_capture" >
        <action
            android:id="@+id/action_captureFragment_to_imageReviewFragment"
            app:destination="@id/imageReviewFragment" />
        <!-- TODO: Add action to SettingsFragment -->
    </fragment>

    <fragment
        android:id="@+id/imageReviewFragment"
        android:name="me.igrr.scribevault.ui.imagereview.ImageReviewFragment"
        android:label="fragment_image_review"
        tools:layout="@layout/fragment_image_review">
        <argument
            android:name="imageUriString"
            app:argType="string" />
        <action
            android:id="@+id/action_imageReviewFragment_to_filingFragment"
            app:destination="@id/filingFragment" />
        <!-- Action to go back to CaptureFragment will be handled by NavController.popBackStack() or Toolbar back button -->
    </fragment>

    <fragment
        android:id="@+id/filingFragment"
        android:name="me.igrr.scribevault.ui.filing.FilingFragment"
        android:label="fragment_filing"
        tools:layout="@layout/fragment_filing">
        <argument
            android:name="ocrResult"
            app:argType="me.igrr.scribevault.domain.ocr.OcrResult"
            app:nullable="true" />
    </fragment>

    <!-- TODO: Add SettingsFragment here -->

</navigation> 